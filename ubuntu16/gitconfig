[core]
    quotepath = false
	excludesfile = ~/.gitignore_global
[push]
    default = simple
[pull]
    default = simple
[merge]
    summary = true
    tool = bc3
[diff]
    renames = copy
    tool = bc3
[difftool]
	prompt = false
[color]
    diff = auto
    status = true
    branch = auto
    interactive = auto
    ui = auto
    log = true
[status]
    submodulesummary = -1
[format]
    numbered = auto
[alias]
    co = checkout
    ck = checkout --track -b
    ci = commit
    st = status
    pl = pull
    ps = push
    l  = log --stat
    ll = log --pretty=oneline --abbrev-commit --graph --decorate
    cp = cherry-pick
    ca = commit -a
    br = branch
    d = diff
    m = merge
    dt = difftool
    mt = mergetool

